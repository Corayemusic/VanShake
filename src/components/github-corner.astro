<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Audio Waveform with Synthesizer</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #333;
    }
    #waveform {
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: black;
      overflow: hidden;
    }
    #waveform-canvas {
      display: block;
    }
    #synth-container {
      position: absolute;
      width: 800px; /* Width of the container */
      height: 300px; /* Height of the container */
      transform: rotate(-90deg); /* Rotate the container */
      transform-origin: center; /* Rotate around the center */
      display: flex;
      justify-content: center;
      align-items: center;
    }
    #synth {
      display: flex;
      flex-direction: row;
      align-items: center;
      position: relative;
    }
    .key {
      width: 100px; /* Increase the width as needed */
      height: 250px; /* Increase the height as needed */
      background: white;
      border: 1px solid black;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      margin: 0 5px;
      display: inline-block;
      position: relative;
      cursor: pointer;
    }
    .key.black {
      width: 70px; /* Increase the width as needed */
      height: 180px; /* Increase the height as needed */
      background: black;
      position: absolute;
      margin-left: -35px; /* Adjust positioning for black keys */
      z-index: 1;
    }
  </style>
</head>
<body>
  <div id="waveform">
    <canvas id="waveform-canvas"></canvas>
    <div id="synth-container">
      <div id="synth">
        <div class="key-container">
          <div class="key"></div>
          <div class="key black" style="left: 80px;"></div> <!-- Example black key -->
          <div class="key"></div>
          <div class="key black" style="left: 80px;"></div> <!-- Example black key -->
          <div class="key"></div>
        </div>
      </div>
    </div>
  </div>
  <script>
    const canvas = document.getElementById('waveform-canvas');
    const ctx = canvas.getContext('2d');
    const width = canvas.width = window.innerWidth;
    const height = canvas.height = window.innerHeight;
    const bufferLength = 2048;
    const audioBuffer = new Float32Array(bufferLength);
    let audioContext;
    let analyser;

    function setupAudio() {
      audioContext = new (window.AudioContext || window.webkitAudioContext)();
      const source = audioContext.createMediaElementSource(new Audio('your-audio-file.mp3'));
      analyser = audioContext.createAnalyser();
      source.connect(analyser);
      analyser.connect(audioContext.destination);
      analyser.fftSize = bufferLength;
    }

    function draw() {
      analyser.getFloatTimeDomainData(audioBuffer);

      ctx.clearRect(0, 0, width, height);
      ctx.fillStyle = 'black';
      ctx.fillRect(0, 0, width, height);

      ctx.lineWidth = 2;
      ctx.strokeStyle = 'white';
      ctx.beginPath();
      const sliceWidth = width / bufferLength;
      let x = 0;

      audioBuffer.forEach((value, i) => {
        const y = (value + 1) * height / 2;
        if (i === 0) {
          ctx.moveTo(x, y);
        } else {
          ctx.lineTo(x, y);
        }
        x += sliceWidth;
      });

      ctx.lineTo(width, height / 2);
      ctx.stroke();

      requestAnimationFrame(draw);
    }

    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    setupAudio();
    draw();
  </script>
</body>
</html>




