<style>
  /* Estilo y animaciones del sintetizador */

  /* Animación de las teclas */
  a:hover .key {
    animation: key-anim 0.5s ease-in-out infinite;
  }

  @keyframes key-anim {
    0%, 100% {
      fill: white;
    }
    50% {
      fill: yellow;
    }
  }

  /* Animación de las perillas */
  a:hover .knob {
    animation: knob-anim 2s linear infinite;
  }

  @keyframes knob-anim {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
