<a
  href="https://github.com/mhyfritz/astro-landing-page"
  aria-label="View source on GitHub"
  class="absolute right-0 top-0 z-10 text-black hover:text-black focus:ring-0 focus:ring-offset-0"
>
  <!-- Triángulo blanco -->
  <svg
    class="fill-white"
    width="100"
    height="100"
    viewBox="0 0 250 250"
    aria-hidden="true"
    style="position: absolute; top: 0; right: 0;"
  >
    <path d="M0,0 L115,115 L130,115 L250,250 L250,0 Z"></path>

    <!-- SVG del sintetizador más grande y reposicionado -->
    <g class="synth-body" transform="translate(70, 70) scale(4.5) rotate(-40deg)">
      <!-- Cuerpo del sintetizador -->
      <rect x="0" y="0" width="80" height="40" fill="black" stroke="white" />

      <!-- Teclas del sintetizador -->
      <rect class="key" x="10" y="20" width="10" height="15" fill="white" />
      <rect class="key" x="25" y="20" width="10" height="15" fill="white" />
      <rect class="key" x="40" y="20" width="10" height="15" fill="white" />
      <rect class="key" x="55" y="20" width="10" height="15" fill="white" />

      <!-- Perillas del sintetizador -->
      <circle class="knob" cx="15" cy="10" r="3" fill="gray" />
      <circle class="knob" cx="30" cy="10" r="3" fill="gray" />
      <circle class="knob" cx="45" cy="10" r="3" fill="gray" />
      <circle class="knob" cx="60" cy="10" r="3" fill="gray" />
    </g>
  </svg>
</a>

<style>
  /* Estilo y animaciones del sintetizador en el corner */

  /* Animación de las teclas */
  a:hover .key {
    animation: key-anim 0.5s ease-in-out infinite;
  }

  @keyframes key-anim {
    0%,
    100% {
      fill: white;
    }
    50% {
      fill: yellow;
    }
  }

  /* Animación de las perillas */
  a:hover .knob {
    animation: knob-anim 2s linear infinite;
  }

  @keyframes knob-anim {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  /* Animación de la "mano" como el gato */
  a:hover .synth-body {
    animation: synth-wave 560ms ease-in-out;
  }

  @keyframes synth-wave {
    0%,
    100% {
      transform: rotate(0);
    }
    20%,
    60% {
      transform: rotate(25deg);
    }
    40%,
    80% {
      transform: rotate(-10deg);
    }
  }

  @media (max-width: 500px) {
    a:hover .synth-body {
      animation: none;
    }
    a .synth-body {
      animation: synth-wave 560ms ease-in-out;
    }
  }
</style>




